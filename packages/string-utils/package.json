{
  "name": "@developaul/string-utils",
  "version": "0.1.0-beta-0",
  "description": "A comprehensive string manipulation utility library",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./formatters": {
      "import": "./dist/formatters.js",
      "types": "./dist/formatters.d.ts"
    },
    "./validators": {
      "import": "./dist/validators.js",
      "types": "./dist/validators.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "pack": "pnpm build && pnpm pack",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "string",
    "utilities",
    "text",
    "manipulation",
    "formatting",
    "validation",
    "typescript"
  ],
  "author": "developaul",
  "license": "MIT",
  "homepage": "https://github.com/developaul/breaking#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/developaul/breaking.git",
    "directory": "packages/string-utils"
  },
  "bugs": {
    "url": "https://github.com/developaul/breaking/issues"
  },
  "engines": {
    "node": ">=22"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
